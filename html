  <body>
      <div class="main-container">
          <header class="header">
              <h1>المهام اليومية الإسلامية</h1>
              <div class="date-display">
                  <span class="day-name" id="dayName"></span>
                  <span class="date-value" id="gregorianDate"></span>
              </div>
          </header>

          <div class="container">
              <div class="input-container">
                  <input type="text" id="newTask" placeholder="أضف مهمة جديدة...">
                  <button onclick="addTask()">إضافة مهمة</button>
              </div>
              <ul class="task-list" id="taskList"></ul>
          </div>

          <div class="stats-wrapper">
              <h2 class="stats-title">إحصائيات اليوم</h2>
              <div class="stats-container">
                  <div class="stat-item">
                      <div class="stat-number total" id="totalTasks">0</div>
                      <div class="stat-label">إجمالي المهام</div>
                  </div>
                  <div class="stat-item">
                      <div class="stat-number completed" id="completedTasks">0</div>
                      <div class="stat-label">المهام المكتملة</div>
                  </div>
                  <div class="stat-item">
                      <div class="stat-number incomplete" id="incompleteTasks">0</div>
                      <div class="stat-label">المهام غير المكتملة</div>
                  </div>
                  <div class="stat-item">
                      <div class="completion-rate" id="completionRate">0%</div>
                      <div class="stat-label">نسبة الإنجاز</div>
                  </div>
              </div>
          </div>

          <button class="export-btn" onclick="exportToExcel()">تصدير التقرير</button>
      </div>

      <script>
          const defaultTasks = [
              "أذكار الصباح",
              "الصلوات الخمس",
              "قراءة القرآن",
              "صلاة الضحى",
              "أذكار المساء",
              "صلاة الوتر"
          ];

          let tasks = [];
          const today = new Date().toISOString().split('T')[0];

          function updateDate() {
              const now = new Date();
              document.getElementById('dayName').textContent = now.toLocaleDateString('ar-SA', { weekday: 'long' });
              document.getElementById('gregorianDate').textContent = now.toLocaleDateString('ar-SA', {
                  year: 'numeric',
                  month: 'numeric',
                  day: 'numeric'
              });
          }

          function updateStats() {
              const total = tasks.length;
              const completed = tasks.filter(t => t.completed).length;
              const incomplete = total - completed;
              const rate = Math.round((completed / total) * 100) || 0;

              document.getElementById('totalTasks').textContent = total;
              
              const completedElement = document.getElementById('completedTasks');
              completedElement.textContent = completed;
              completedElement.style.animation = 'none';
              completedElement.offsetHeight;
              completedElement.style.animation = 'pulseGreen 2s infinite';

              const incompleteElement = document.getElementById('incompleteTasks');
              incompleteElement.textContent = incomplete;
              incompleteElement.style.animation = 'none';
              incompleteElement.offsetHeight;
              incompleteElement.style.animation = 'pulseRed 2s infinite';

              const rateElement = document.getElementById('completionRate');
              let color;
              if (rate >= 100) color = '#2ecc71';
              else if (rate >= 75) color = '#27ae60';
              else if (rate >= 50) color = '#f1c40f';
              else if (rate >= 25) color = '#e67e22';
              else color = '#e74c3c';
              
              rateElement.textContent = `${rate}%`;
              rateElement.style.color = color;
              rateElement.style.textShadow = `0 0 10px ${color}40`;
              rateElement.style.background = `linear-gradient(45deg, ${color}20, transparent)`;
          }

          function loadTasks() {
              const savedTasks = localStorage.getItem(today);
              if (savedTasks) {
                  tasks = JSON.parse(savedTasks);
              } else {
                  tasks = defaultTasks.map(text => ({
                      text,
                      completed: false,
                      isDefault: true
                  }));
                  saveTasks();
              }
              renderTasks();
          }

          function saveTasks() {
              localStorage.setItem(today, JSON.stringify(tasks));
              updateStats();
          }

          function addTask() {
              const input = document.getElementById('newTask');
              const text = input.value.trim();
              if (text) {
                  tasks.push({
                      text,
                      completed: false,
                      isDefault: false
                  });
                  input.value = '';
                  saveTasks();
                  renderTasks();
              }
          }

          function toggleTask(index) {
              tasks[index].completed = !tasks[index].completed;
              saveTasks();
              renderTasks();

              if (tasks[index].completed) {
                  const taskElement = document.querySelectorAll('.task-item')[index];
                  taskElement.style.animation = 'completeTask 0.5s ease-out';
              }
          }

          function renderTasks() {
              const list = document.getElementById('taskList');
              list.innerHTML = '';
              tasks.forEach((task, index) => {
                  const li = document.createElement('li');
                  li.className = `task-item ${task.completed ? 'completed' : ''}`;
                  li.innerHTML = `
                      <input type="checkbox" class="task-checkbox" 
                          ${task.completed ? 'checked' : ''} 
                          onchange="toggleTask(${index})">
                      <span class="task-text">${task.text}</span>
                  `;
                  list.appendChild(li);
              });
              updateStats();
          }

          function exportToExcel() {
              const wb = XLSX.utils.book_new();
              const ws_data = tasks.map(task => ({
                  'المهمة': task.text,
                  'الحالة': task.completed ? '✓ مكتملة' : '✗ غير مكتملة',
                  'النوع': task.isDefault ? 'أساسية' : 'مخصصة'
              }));
              
              const ws = XLSX.utils.json_to_sheet(ws_data);
              XLSX.utils.book_append_sheet(wb, ws, "المهام");
              XLSX.writeFile(wb, `تقرير_المهام_${today}.xlsx`);
          }

          document.getElementById('newTask').addEventListener('keypress', function(e) {
              if (e.key === 'Enter') {
                  addTask();
              }
          });

          // تشغيل التطبيق
          updateDate();
          loadTasks();
      </script>
  </body>
  </html>
